<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">


  <welcome-file-list>
    <welcome-file>homePage.jsp</welcome-file>
  </welcome-file-list>

  <!-- Set the resource bundle name -->
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>

  <!--============================================================
    Controller
=============================================================-->
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.epam.javacourse.hotel.web.command.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <!-- Servlet Encoding Filter ================================================ -->

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.epam.javacourse.hotel.web.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

  <!-- Error page =============================================================-->

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/errorPage.jsp</location>
  </error-page>

  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/jsp/errorPage.jsp</location>
  </error-page>

  <!-- Filter mappings ================================================ -->






</web-app>
        